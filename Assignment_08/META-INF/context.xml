<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Disable session persistence across Tomcat restarts -->
    <Manager pathname="" />
    
    <!-- Define JNDI DataSource for database connection -->
    <Resource name="jdbc/ebookshopDB" 
              auth="Container" 
              type="javax.sql.DataSource"
              maxTotal="100" 
              maxIdle="30" 
              maxWaitMillis="10000"
              username="root" 
              password="" 
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/pragati"/>
</Context>